                                        <% }%>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="content">
            <div id="pengumuman" class="section pengumuman-section py-4">
                <div class="container" style="padding-top: 70px;">
                    <h2 class="text-center mb-4">Pengumuman Desa</h2>
                    <div class="row justify-content-center">
                        <div class="col-lg-8">
                            <div class="pengumuman-list">
                                <% pengumuman.forEach(pengumuman => { %>
                                    <div class="pengumuman-item mb-3">
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-body p-3">
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <h5 class="card-title mb-0"><%= pengumuman.title %></h5>
                                                   
                                                <span><%= pengumuman.created_at.toLocaleDateString() %></span>
                                                </div>
                                                <p><%= pengumuman.content %></p>
                                            </div>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <footer class="py-3" style="color: rgb(255,255,255); background: #041d2d;">
            <div class="container">
                <div class="row">
                    <div class="col-12 text-center">
                        <span class="copyright">Copyright Â© Desa Tegal 2024</span>
                    </div>
                </div>
