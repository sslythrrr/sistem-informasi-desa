<script>
    var ctx = document.getElementById('educationChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['SD', 'SMP', 'SMA', 'Diploma', 'S1', 'S2/S3'],
            datasets: [{
                data: [6178, 2142, 2836, 332, 943, 68],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.8)',
                    'rgba(54, 162, 235, 0.8)',
                    'rgba(255, 206, 86, 0.8)',
                    'rgba(75, 192, 192, 0.8)',
                    'rgba(153, 102, 255, 0.8)',
                    'rgba(255, 159, 64, 0.8)'
                ]
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false, // Tambahkan ini
            plugins: {
                legend: {
                    position: 'right', // Ubah posisi legend ke kanan
                    labels: {
                        boxWidth: 10, // Kurangi ukuran kotak warna
                        font: {
                            size: 10 // Kurangi ukuran font legend
                        }
                    }
                },
                title: {
                    display: true,
                    text: 'Distribusi Tingkat Pendidikan',
                    font: {
                        size: 14 // Kurangi ukuran font judul
                    }
                }
            }
        }
    });
</script>
