    <section class="page-section" id="dashboard" style="padding-bottom: 200px;">
        <div class="container" style="margin-top:-40px;">
            <h2 class="text-center" style="color: #221e12;"">Admin Dashboard</h2>
            <hr class="divider" />
    
            <!-- Berita Section -->
            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <h2 class="card-title" style="color: #221e12;text-align: center;">Berita</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <form action="/admin/add-berita" method="POST" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <input type="text" class="form-control" name="judul" placeholder="Judul Berita" required>
                                        </div>
                                        <div class="mb-3">
                                            <textarea class="form-control" name="isi" placeholder="Isi Berita" rows="3" required></textarea>
                                        </div>
                                        <div class="mb-3">
                                            <input type="file" class="form-control" name="gambar">
                                        </div>
                                        <button type="submit" class="btn btn-primary">Tambah Berita</button>
                                    </form>
                                </div>
                                <div class="col-md-6">
                                    <div style="max-height: 300px; overflow-y: auto;">
                                        <ul class="list-group" id="beritaList">
                                            <!-- Daftar berita akan ditampilkan di sini -->
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
            <!-- Galeri Section -->
            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <h2 class="card-title" style="color: #221e12;text-align: center;">Galeri</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <form action="/admin/add-gallery" method="POST" enctype="multipart/form-data">
                                        <div class="mb-3">
                                            <input type="file" class="form-control" name="image" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="text" class="form-control" name="title" placeholder="Judul Gambar" required>
                                        </div>
                                        <div class="mb-3">
                                            <input type="text" class="form-control" name="kategori" placeholder="Kategori Gambar" required>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Tambah Gambar</button>
                                    </form>
                                </div>
                                <div class="col-md-6">
                                    <div style="max-height: 300px; overflow-y: auto;">
                                        <ul class="list-group" id="galeriList">
                                            <!-- Daftar gambar akan ditampilkan di sini -->
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
            <!-- Pengumuman Section -->
            <div class="row mb-5">
                <div class="col-lg-12">
                    <div class="card shadow">
                        <div class="card-body">
                            <h2 class="card-title" style="color: #221e12;text-align: center;">Pengumuman</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <form action="/admin/add-announcement" method="POST">
                                        <div class="mb-3">
                                            <input type="text" class="form-control" name="title" placeholder="Judul Pengumuman" required>
                                        </div>
                                        <div class="mb-3">
                                            <textarea class="form-control" name="content" placeholder="Isi Pengumuman" rows="3" required></textarea>
                                        </div>
                                        <button type="submit" class="btn btn-primary">Tambah Pengumuman</button>
                                    </form>
                                </div>
                                <div class="col-md-6">
                                    <div style="max-height: 300px; overflow-y: auto;">
                                        <ul class="list-group" id="announcementList">
                                            <!-- Daftar pengumuman akan ditampilkan di sini -->
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    
            <!-- Aspirasi dan Pengajuan Surat Section -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="card shadow" style="background-color: #f8f9fa;">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <h3 class="card-title" style="color: #221e12;text-align: center;">Daftar Aspirasi</h3>
                                    <div style="max-height: 300px; overflow-y: auto;">
                                        <ul class="list-group" id="aspirationList">
                                            <!-- Daftar aspirasi akan ditampilkan di sini -->
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <h3 class="card-title" style="color: #221e12;text-align: center;">Daftar Pengajuan Surat</h3>
                                    <div style="max-height: 300px; overflow-y: auto;">
                                        <ul class="list-group" id="letterList">
                                            <!-- Daftar pengajuan surat akan ditampilkan di sini -->
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="py-3" style="color: rgb(255,255,255); background: #041d2d;">
