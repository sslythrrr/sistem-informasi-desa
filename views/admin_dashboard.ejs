    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/agency.js"></script>
    <script>
        // Fungsi untuk memuat data galeri
        function loadgaleri() {
            fetch('/admin/galeri')
                .then(response => response.json())
                .then(data => {
                    const galeriList = document.getElementById('galeriList');
                    galeriList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                        li.innerHTML = `
                            <div class="d-flex align-items-center">
                                <img src="data:image/jpeg;base64,${item.galeri_img}" alt="galeri Image" style="width: 100px; height: 100px; object-fit: cover; margin-right: 10px;">
                                <strong>${item.title}</strong><br>
                                <small style="padding-left: 10px;">(${item.kategori})</small>
                            </div>
                            <button class="btn btn-danger btn-sm" onclick="deletegaleriItem(${item.id})">Hapus</button>
                        `;
                        galeriList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk memuat data pengumuman
        function loadAnnouncements() {
            fetch('/admin/pengumuman')
                .then(response => response.json())
                .then(data => {
                    const announcementList = document.getElementById('announcementList');
                    announcementList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                        li.innerHTML = `
                            <div>
                                <strong>${item.title}</strong><br>
                                <small>${item.content}</small>
                            </div>
                            <button class="btn btn-danger btn-sm" onclick="deleteAnnouncement(${item.id})">Hapus</button>
                        `;
                        announcementList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk memuat data aspirasi
        function loadaspirasi() {
            fetch('/admin/aspirasi')
                .then(response => response.json())
                .then(data => {
                    const aspirationList = document.getElementById('aspirationList');
                    aspirationList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item';
                        li.innerHTML = `
                            <strong>${item.name}</strong> (${item.email})<br>
                            ${item.message}
                        `;
                        aspirationList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk memuat data pengajuan surat
        function loadLetters() {
            fetch('/admin/letters')
                .then(response => response.json())
                .then(data => {
                    const letterList = document.getElementById('letterList');
                    letterList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item';
                        li.innerHTML = `
                            <strong>${item.nama}</strong> (${item.telepon})<br>
                            Perihal: ${item.perihal}<br>
                            Staf: ${item.staf}<br>
                            Keterangan: ${item.keterangan}
                        `;
                        letterList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk memuat data berita
        function loadBerita() {
            fetch('/admin/berita')
                .then(response => response.json())
                .then(data => {
                    const beritaList = document.getElementById('beritaList');
                    beritaList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                        li.innerHTML = `
                            <div>
                                <strong>${item.judul}</strong><br>
                                <small>${item.isi_singkat}...</small>
                            </div>
                            <button class="btn btn-danger btn-sm" onclick="deleteBerita(${item.id})">Hapus</button>
                        `;
                        beritaList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk menghapus berita
        function deleteBerita(id) {
            if (confirm('Apakah Anda yakin ingin menghapus berita ini?')) {
                fetch(`/admin/delete-berita/${id}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            loadBerita();
                        } else {
                            alert('Gagal menghapus berita');
                        }
                    });
            }
        }

        // Fungsi untuk menghapus item galeri
        function deletegaleriItem(id) {
            if (confirm('Apakah Anda yakin ingin menghapus gambar ini?')) {
                fetch(`/admin/delete-galeri/${id}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            loadgaleri();
                        } else {
                            alert('Gagal menghapus gambar');
                        }
                    });
            }
        }

        // Fungsi untuk menghapus pengumuman
        function deleteAnnouncement(id) {
            if (confirm('Apakah Anda yakin ingin menghapus pengumuman ini?')) {
                fetch(`/admin/delete-pengumuman/${id}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            loadAnnouncements();
                        } else {
                            alert('Gagal menghapus pengumuman');
                        }
                    });
            }
        }

        // Memuat semua data saat halaman dimuat
        document.addEventListener('DOMContentLoaded', () => {
            loadBerita();
            loadgaleri();
            loadAnnouncements();
            loadaspirasi();
            loadLetters();
        });
    </script>
