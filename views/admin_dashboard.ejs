    <section class="page-section" id="dashboard">
        <div class="container">
            <h2 class="text-center" style="margin-top: -30px;">Admin Dashboard</h2>
            <hr class="divider" />

            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3 class="h4 mb-3">Berita</h3>
                            <form action="/admin/add-berita" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="judul" placeholder="Judul Berita" required>
                                </div>
                                <div class="mb-3">
                                    <textarea class="form-control" name="isi" placeholder="Isi Berita" rows="3" required></textarea>
                                </div>
                                <div class="mb-3">
                                    <input type="file" class="form-control" name="gambar">
                                </div>
                                <button type="submit" class="btn btn-primary">Tambah Berita</button>
                            </form>
                            <hr>
                            <h4>Daftar Berita</h4>
                            <ul class="list-group" id="beritaList">
                                <!-- Daftar berita akan ditampilkan di sini -->
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3 class="h4 mb-3">Galeri</h3>
                            <form action="/admin/add-gallery" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <input type="file" class="form-control" name="image" required>
                                </div>
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="title" placeholder="Judul Gambar" required>
                                </div>
                                <button type="submit" class="btn btn-primary">Tambah Gambar</button>
                            </form>
                            <hr>
                            <h4>Daftar Gambar</h4>
                            <ul class="list-group" id="galleryList">
                                <!-- Daftar gambar akan ditampilkan di sini -->
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3 class="h4 mb-3">Pengumuman</h3>
                            <form action="/admin/add-announcement" method="POST">
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="title" placeholder="Judul Pengumuman" required>
                                </div>
                                <div class="mb-3">
                                    <textarea class="form-control" name="content" placeholder="Isi Pengumuman" rows="3" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Tambah Pengumuman</button>
                            </form>
                            <hr>
                            <h4>Daftar Pengumuman</h4>
                            <ul class="list-group" id="announcementList">
                                <!-- Daftar pengumuman akan ditampilkan di sini -->
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3 class="h4 mb-3">Daftar Aspirasi</h3>
                            <ul class="list-group" id="aspirationList">
                                <!-- Daftar aspirasi akan ditampilkan di sini -->
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h3 class="h4 mb-3">Daftar Pengajuan Surat</h3>
                            <ul class="list-group" id="letterList">
                                <!-- Daftar pengajuan surat akan ditampilkan di sini -->
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/js/agency.js"></script>
    <script>
        // Fungsi untuk memuat data galeri
        function loadGallery() {
            fetch('/admin/gallery')
                .then(response => response.json())
                .then(data => {
                    const galleryList = document.getElementById('galleryList');
                    galleryList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                        li.innerHTML = `
                            <div class="d-flex align-items-center">
                                <img src="data:image/jpeg;base64,${item.image_url}" alt="Gallery Image" style="width: 100px; height: 100px; object-fit: cover; margin-right: 10px;">
                                <strong>${item.title}</strong>
                            </div>
                            <button class="btn btn-danger btn-sm" onclick="deleteGalleryItem(${item.id})">Hapus</button>
                        `;
                        galleryList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk memuat data pengumuman
        function loadAnnouncements() {
            fetch('/admin/announcements')
                .then(response => response.json())
                .then(data => {
                    const announcementList = document.getElementById('announcementList');
                    announcementList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                        li.innerHTML = `
                            <div>
                                <strong>${item.title}</strong><br>
                                <small>${item.content}</small>
                            </div>
                            <button class="btn btn-danger btn-sm" onclick="deleteAnnouncement(${item.id})">Hapus</button>
                        `;
                        announcementList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk memuat data aspirasi
        function loadAspirations() {
            fetch('/admin/aspirations')
                .then(response => response.json())
                .then(data => {
                    const aspirationList = document.getElementById('aspirationList');
                    aspirationList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item';
                        li.innerHTML = `
                            <strong>${item.name}</strong> (${item.email})<br>
                            ${item.message}
                        `;
                        aspirationList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk memuat data pengajuan surat
        function loadLetters() {
            fetch('/admin/letters')
                .then(response => response.json())
                .then(data => {
                    const letterList = document.getElementById('letterList');
                    letterList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item';
                        li.innerHTML = `
                            <strong>${item.nama}</strong> (${item.telepon})<br>
                            Perihal: ${item.perihal}<br>
                            Staf: ${item.staf}<br>
                            Keterangan: ${item.keterangan}
                        `;
                        letterList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk memuat data berita
        function loadBerita() {
            fetch('/admin/berita')
                .then(response => response.json())
                .then(data => {
                    const beritaList = document.getElementById('beritaList');
                    beritaList.innerHTML = '';
                    data.forEach(item => {
                        const li = document.createElement('li');
                        li.className = 'list-group-item d-flex justify-content-between align-items-center';
                        li.innerHTML = `
                            <div>
                                <strong>${item.judul}</strong><br>
                                <small>${item.isi_singkat}...</small>
                            </div>
                            <button class="btn btn-danger btn-sm" onclick="deleteBerita(${item.id})">Hapus</button>
                        `;
                        beritaList.appendChild(li);
                    });
                });
        }

        // Fungsi untuk menghapus berita
        function deleteBerita(id) {
            if (confirm('Apakah Anda yakin ingin menghapus berita ini?')) {
                fetch(`/admin/delete-berita/${id}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            loadBerita();
                        } else {
                            alert('Gagal menghapus berita');
                        }
                    });
            }
        }

        // Fungsi untuk menghapus item galeri
        function deleteGalleryItem(id) {
            if (confirm('Apakah Anda yakin ingin menghapus gambar ini?')) {
                fetch(`/admin/delete-gallery/${id}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            loadGallery();
                        } else {
                            alert('Gagal menghapus gambar');
                        }
                    });
            }
        }

        // Fungsi untuk menghapus pengumuman
        function deleteAnnouncement(id) {
            if (confirm('Apakah Anda yakin ingin menghapus pengumuman ini?')) {
                fetch(`/admin/delete-announcement/${id}`, { method: 'DELETE' })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            loadAnnouncements();
                        } else {
                            alert('Gagal menghapus pengumuman');
                        }
                    });
            }
        }

        // Memuat semua data saat halaman dimuat
        document.addEventListener('DOMContentLoaded', () => {
            loadBerita();
            loadGallery();
            loadAnnouncements();
            loadAspirations();
            loadLetters();
        });
    </script>
    
</body>

